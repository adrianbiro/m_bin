#!/bin/bash

[[ -z "${1}" ]] && {
    echo -e "
Usage:
    ${0##*/} <example.com> [dig options, +short is default]"

    exit 1
}
SERVERS='8.8.8.8,8.8.4.4,76.76.2.0,76.76.10.0,9.9.9.9,149.112.112.112,208.67.222.222,208.67.220.220,1.1.1.1,1.0.0.1,185.228.168.9,185.228.169.9,76.76.19.19,76.223.122.150,94.140.14.14,94.140.15.15'

tr ',' '\n' <<<"${SERVERS}" | while IFS=',' read -r server; do
    echo "Server $server:"
    dig +short "${@}" @"${server}"
done
